{
    "tasks": [
        {
            "label": "Build_GCC",
            "type": "cppbuild",
            "command": "/usr/bin/gcc",
            "args": [
                "-g",
                "-fdiagnostics-color=always",
                "-I", "${workspaceFolder}/include",
                "${workspaceFolder}/src/main.c",
                "${workspaceFolder}/src/networking.c",
                "${workspaceFolder}/src/threads.c",
                "${workspaceFolder}/src/utils.c",
                "${workspaceFolder}/src/messaging.c",
                "${workspaceFolder}/src/args.c",
                "-o",
                "${workspaceFolder}/build/main"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}